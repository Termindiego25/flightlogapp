<Window x:Class="UserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flight_LogApp"
        mc:Ignorable="d"
        Title="User" Height="500" Width="900" ResizeMode="NoResize" Icon="/Flight LogApp;component/images/logo.ico">
    <Grid VerticalAlignment="Center" Margin="20,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image x:Name="profileImage" Grid.RowSpan="4" Source="/Flight LogApp;component/images/contact_image.png" VerticalAlignment="Center" Width="150" Height="150" Margin="50, 0" />
        <TextBlock Grid.Column="1" Text="Name: " VerticalAlignment="Center" />
        <TextBox x:Name="nameTextBox" Grid.Column="2" Margin="10" TabIndex="1" />
        <TextBlock Grid.Column="3" Text="Lastname: " VerticalAlignment="Center" />
        <TextBox x:Name="lastnameTextBox" Grid.Column="4" Margin="10" TabIndex="2" />
        <TextBlock Grid.Row="1" Grid.Column="1" Text="UserType: " VerticalAlignment="Center" />
        <ComboBox x:Name="userTypesComboBox" DisplayMemberPath="type" Grid.Row="1" Grid.Column="2" Margin="10" TabIndex="3" />
        <TextBlock Grid.Row="1" Grid.Column="3" Text="LandingField: " VerticalAlignment="Center"  />
        <ComboBox x:Name="landingFieldsComboBox" DisplayMemberPath="name" Grid.Row="1" Grid.Column="4" Margin="10" TabIndex="4" />
        <TextBlock Grid.Row="2" Grid.Column="1" Text="Username: " VerticalAlignment="Center"  />
        <TextBox x:Name="usernameTextBox" Grid.Row="2" Grid.Column="2" Margin="10" TabIndex="5" />
        <TextBlock Grid.Row="2" Grid.Column="3" Text="Password: " VerticalAlignment="Center"  />
        <PasswordBox x:Name="passwordPasswordBox" Grid.Row="2" Grid.Column="4" Margin="10" TabIndex="6" />
        <Button x:Name="sendUserButton" Grid.Row="3" Grid.Column="4" TabIndex="7" Content="Send" Width="75" HorizontalAlignment="Right" Margin="10" Click="sendUserButton_Click" />
    </Grid>
</Window>
